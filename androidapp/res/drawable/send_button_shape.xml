<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                    android:radius="20dp"
                    />
            <solid
                    android:color="#dfdfc4"
                    />
            <size android:height="45dp" android:width="240dp"/>
            <stroke android:width="1dp" android:color="#ADAD98"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners
                    android:radius="20dp"
                    />
            <solid
                    android:color="#D3D2AC"
                    />
            <size android:height="45dp" android:width="240dp"/>
            <stroke
                    android:width="1dp"
                    android:color="#9f9e50"
                    />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners
                    android:radius="20dp"
                    />
            <solid
                    android:color="#C6C595"
                    />
            <size android:height="45dp" android:width="240dp"/>
            <stroke
                    android:width="1dp"
                    android:color="#9f9e50"
                    />
        </shape>
    </item>
</selector>
